{% extends 'base.html.twig'%}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>

        {% if editMode %}
        Modification d'un article
        {% else %}
        Cr√©e votre article de blog
        {% endif %}

    </h1>

    {{ form_start(formArticle) }}

    {{  form_row(formArticle.title, {'attr': {'placeholder': "ici le titre de votre article"}}) }}

    {{  form_row(formArticle.category) }}

    {{  form_row(formArticle.content, {'attr': {'placeholder': "ici le contenu de votre article"}}) }}

    {{  form_row(formArticle.image, {'attr': {'placeholder': "ici l'URL de l'image"}}) }}

    {{ form_widget(formArticle) }}

    <button type="submit" class="btn btn-success">

        {% if editMode %}
            Enregistrement des modification
        {% else %}
            Enregistrer l'article
        {% endif %}

    </button>

    {{ form_end(formArticle) }}

{% endblock %}