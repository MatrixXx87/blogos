{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <section class="articles">
        <h1>Blogosphere du Limousin</h1>

        {% for article in articles %}
            <article>
                <h2 class="mt-5">{{ article.title }}</h2>
                <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y')  }} à {{ article.createdAt | date('H:i') }}
                    dans la catégorie des bons petits plats!
                </div>
                <div class="content">
                    <div class="raw">
                        <img src="{{ article.image }}alt="">
                    </div>
                    <div class="raw mt-2">
                        {{ article.content | raw }}
                    </div>
                    <div class="raw">
                        <a href="{{ path ('blog_show', {'id': article.id}) }}" class="btn btn-success">En savoir plus...</a>
                    </div>
                </div>
            </article>
        {% endfor %}

</section>

{% endblock %}
